         </children>
      </HBox>
   </children>
</VBox>

<VBox fx:id="game3" layoutX="46.0" layoutY="22.0" prefHeight="138.0" prefWidth="75.0" styleClass="game_box" stylesheets="@select_game.css" alignment="CENTER">
   <children>
      <Label fx:id="game3Label" prefHeight="50.0" prefWidth="75.0" styleClass="game_label" stylesheets="@select_game.css">
